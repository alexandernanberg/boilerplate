{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Alexander Nanberg <alex.nanberg@hotmail.com> (alexandernanberg.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandernanberg/react-boilerplate"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "npm run clean && NODE_ENV=production webpack --config config/webpack.config.js",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint 'src/**/*.js' && stylelint 'src/**/*.js'",
    "clean": "find public ! -name 'manifest.json' -mindepth 1 -exec rm -rf {} + || exit 0",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "offline-plugin": "^4.8.4",
    "polished": "^1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2",
    "reset-css": "^2.2.1",
    "styled-components": "^2.2.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-preval": "^1.6.2",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "copy-webpack-plugin": "^4.2.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "react-dev-utils": "^4.2.1",
    "stylelint": "^8.2.0",
    "stylelint-config-strateg": "^1.4.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "react/jsx-filename-extension": 0,
      "react/prop-types": 0
    },
    "globals": {
      "preval": true
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-strateg",
      "stylelint-config-styled-components"
    ],
    "syntax": "scss"
  }
}
