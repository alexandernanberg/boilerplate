{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Alexander Nanberg <alex.nanberg@hotmail.com> (alexandernanberg.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandernanberg/react-boilerplate"
  },
  "scripts": {
    "dev": "webpack-dev-server --config config/webpack.config.dev.js",
    "build": "NODE_ENV=production webpack --config config/webpack.config.prod.js",
    "start": "serve -s dist",
    "lint": "eslint 'src/**/*.js' && stylelint 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "offline-plugin": "^4.8.4",
    "polished": "^1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2",
    "reset-css": "^2.2.1",
    "serve": "^6.4.1",
    "styled-components": "^2.2.4",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-preval": "^1.6.2",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.2.3",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.5.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.1",
    "react-dev-utils": "^4.2.1",
    "stylelint": "^8.3.1",
    "stylelint-config-strateg": "^1.5.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.1.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.9.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.5"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": ["react", "prettier"],
    "env": {
      "browser": true
    },
    "rules": {
      "semi": ["error", "never"],
      "react/jsx-filename-extension": 0,
      "react/prop-types": 0,
      "import/prefer-default-export": 0
    },
    "globals": {
      "preval": true
    }
  },
  "stylelint": {
    "processors": ["stylelint-processor-styled-components"],
    "extends": ["stylelint-config-strateg", "stylelint-config-styled-components"],
    "syntax": "scss"
  }
}
