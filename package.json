{
  "name": "minimal-react-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Alexander Nanberg <alex.nanberg@hotmail.com> (alexandernanberg.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandernanberg/minimal-react-boilerplate"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "test": "eslint 'src/**/*.js' && stylelint 'src/**/*.scss'",
    "start": "NODE_ENV=production node server.js",
    "clean": "find public \\( -name '*.js' -o -name '*.html' -o -name '*.map' -o -name '*.css' \\) -mindepth 1 -exec rm -rf {} + || exit 0",
    "build": "npm run clean && NODE_ENV=production webpack -p",
    "dev": "webpack-dev-server"
  },
  "dependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "css-loader": "^0.28.2",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.3",
    "offline-plugin": "^4.8.1",
    "postcss-loader": "^2.0.5",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "react-router-dom": "^4.1.1",
    "reset-css": "^2.2.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "svg-sprite-loader": "^3.0.1",
    "uuid": "^3.0.1",
    "webpack": "^2.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "postcss": "^6.0.1",
    "stylelint": "^7.10.1",
    "stylelint-config-strateg": "^1.2.1",
    "webpack-dev-server": "^2.4.5"
  }
